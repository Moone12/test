.container {
  padding: 20rpx;
}
.title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.loading {
  text-align: center;
  font-size: 28rpx;
  color: #999;
}
.notice-item {
  padding: 15rpx;
  border-bottom: 1px solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.notice-title {
  font-size: 28rpx;
  flex: 1;
}
.notice-time {
  font-size: 24rpx;
  color: #999;
}
.no-notice {
  text-align: center;
  font-size: 28rpx;
  color: #999;
  padding: 50rpx 0;
}